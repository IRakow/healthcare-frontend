FROM node:18

WORKDIR /app

# Copy package files and install ALL dependencies (including devDependencies for build)
COPY package*.json ./
RUN npm install

# Copy application code
COPY . .

# Build the application
RUN npm run build

# Install serve if not already in dependencies
RUN npm install -g serve

ENV NODE_ENV=production
EXPOSE 8080

# Direct command without using npm start
CMD serve -s dist -l ${PORT:-8080} --single --no-clipboard